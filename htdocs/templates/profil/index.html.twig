{% extends 'base.html.twig' %}

{% block title %}Profil{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

    {% if app.user %}
        <div class="example-wrapper">
        <h1>Hello {{ app.user.username | default('anonyme')}}! ✅</h1>

        Vous avez parié :
        <ul>
        {% for key,match in matchs %}
            {% for bet in bets %}
                {% if bet.idMatch == key %}
                <li>Ticket n° {{bet.id}} - {{ match.teams.domicile }} VS {{ match.teams.exterieur }} avec score domicile : {{bet.scoreDomicile}} - score exterieur : {{bet.scoreExterieur}} </li>
                {% endif %}
            {% endfor %}
        {% endfor %}
        </ul>

        Vous avez gagné <b> {{ points }} points</b>  au total sur tout vos paris


     {% endif %}

</div>
{% endblock %}
